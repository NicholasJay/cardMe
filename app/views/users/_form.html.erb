<div class = "form" >
  
    <% if @user.id.nil? %>
        <h2>JOIN US</h2>
    <% else %>
        <h2>EDIT PROFILE</h2>
    <% end %>
  <hr>

  <%= form_for @user do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <br/>

    <%= f.label :password %>
    <%= f.password_field :password %>
    <br/>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <br/>

    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    <br/>

    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <br/>

    <%= f.submit @user.id.nil? ? "Join" : "Save Changes" %>
  <% end %>

</div>